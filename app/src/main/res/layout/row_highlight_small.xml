<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/cardsDialog">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless">

        <FrameLayout
            android:id="@+id/gradient"
            android:layout_width="140dp"
            android:layout_height="100dp"/>

        <ImageView
            android:id="@+id/image_thumbnail"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/image_thumbnail_unavailable"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@id/gradient"
            android:layout_alignStart="@id/gradient"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/whitebballstraight"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/gradient"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/gradient"
            android:layout_toEndOf="@id/gradient">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Isaiah Thomas dances through all 5 Hawks defenders through all 5 Hawks defenders defenders through all fffffffff"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                />

            <TextView
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/text_view_thread"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="@string/view_thread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/button_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_share_black_24dp"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>